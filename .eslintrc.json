{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "airbnb-typescript",
    "airbnb/hooks",
    "prettier"
  ],

  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "tsconfigRootDir": "./"
  },
  "plugins": ["react", "@typescript-eslint", "import"],
  "rules": {
    "func-names": "off",
    "no-param-reassign": ["off", { "extensions": [".js", ".ts"] }],
    "import/no-cycle": "off",
    "import/prefer-default-export": "off",
    "class-methods-use-this": "off"
  }
}
